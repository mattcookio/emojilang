{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "EmojiLang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.emojilang",
          "match": "//.*$"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.emojilang",
          "match": "🍌"
        },
        {
          "name": "keyword.operator.arithmetic.addition.emojilang",
          "match": "🤪"
        },
        {
          "name": "keyword.operator.arithmetic.subtraction.emojilang",
          "match": "🥴"
        },
        {
          "name": "keyword.operator.arithmetic.multiplication.emojilang",
          "match": "🤯"
        },
        {
          "name": "keyword.control.statement.emojilang",
          "match": "🦄"
        },
        {
          "name": "keyword.control.loop.while.emojilang",
          "match": "🔄"
        },
        {
          "name": "keyword.control.loop.end.emojilang",
          "match": "🛑"
        },
        {
          "name": "punctuation.terminator.statement.emojilang",
          "match": "💩"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.emojilang",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.emojilang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.emojilang"
} 